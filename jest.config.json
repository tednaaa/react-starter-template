{
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/jest/setup.ts"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/jest/file-mock.ts",
    "\\.(css|scss)$": "<rootDir>/jest/style-mock.ts"
  }
}
